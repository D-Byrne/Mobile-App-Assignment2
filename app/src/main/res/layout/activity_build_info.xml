<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.BuildPlannerInfoActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBrown"
        android:fitsSystemWindows="true"
        app:elevation="0dip"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/lightGrey" />
    </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/buildNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="8dp"
                android:autofillHints=""
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/lightGrey"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/buildAppDescriptionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="8dp"
                    android:autofillHints=""
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/lightGrey"
                    android:text="@string/aboutAppTitle"
                    android:textSize="25dp" />


                <TextView
                    android:id="@+id/buildAppDescription"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="0dp"
                    android:autofillHints=""
                    android:padding="8dp"
                    android:textColor="@color/lightGrey"
                    android:text="@string/aboutAppDescription"
                    android:textSize="15dp" />


            </LinearLayout>







        </ScrollView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>